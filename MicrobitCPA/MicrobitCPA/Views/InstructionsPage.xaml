<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicrobitCPA.Views.InstructionsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <OnPlatform.iOS>10,20,10,10</OnPlatform.iOS>
                    <OnPlatform.Android>10,10,10,10</OnPlatform.Android>
                </OnPlatform>
            </StackLayout.Padding>
            <Button Text="Micro:bit是什么?" x:Name="OpenMicrobitLinkButton" TextColor="White" BackgroundColor="#46549E" HorizontalOptions="FillAndExpand" />
            <Label Text="Hex 文件 &amp; 配对" FontSize="Large" />
            <Label Text="1) 我们需要用Hex文件开启设备的蓝牙服务." FontSize="Small" />
            <Label Text="2) Hex文件您可以参考Martin Woolley的文章: http://blog.bluetooth.com/bbc-microbit/ ." FontSize="Small" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>